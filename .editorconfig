root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[Makefile]
indent_style = tab

[*.py]
indent_size = 4
max_line_length = 100

[*.{html,rst,md}]
indent_size = 4

[*.{js,ts,tsx,json,yml,yaml,css,scss}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[{*.toml,*.toml.tmpl,*.tmpl}]
indent_style = tab
